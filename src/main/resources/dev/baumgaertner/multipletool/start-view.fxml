<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.baumgaertner.multipletool.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Button fx:id="durchschnitt" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onDurchschnittPressed" text="Durchschnittsberechnung">
      <VBox.margin>
         <Insets left="-1.0" right="-1.0" />
      </VBox.margin>
   </Button>
   <Button fx:id="biggestNum" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onBiggestNum" text="größte zahl ermitteln">
      <VBox.margin>
         <Insets left="-1.0" right="-1.0" />
      </VBox.margin>
   </Button>
   <Button fx:id="CtoF" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onCtoF" text="Celsius zu Fahrenheit">
      <VBox.margin>
         <Insets left="-1.0" right="-1.0" />
      </VBox.margin>
   </Button>
   <Button fx:id="Stb" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onStringBackward" text="Strings umdrehen">
      <VBox.margin>
         <Insets left="-1.0" right="-1.0" />
      </VBox.margin>
   </Button>
   <Button fx:id="CvD" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#ocCheckValideDate" text="prüfe auf valides Datum">
      <VBox.margin>
         <Insets left="-1.0" right="-1.0" />
      </VBox.margin>
   </Button>


   <Button fx:id="ExitButton" mnemonicParsing="false" onAction="#unExit" text="Exit" />
</VBox>
